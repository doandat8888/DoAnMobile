<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            tools:ignore="RtlSymmetry">

            <!--ImageView Cart Item-->
            <ImageView
                android:id="@+id/imgItemCart"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/pizzacategory"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="4dp"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <!--Cart Item Information-->
                <TextView
                    android:id="@+id/txtCartItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Pizza phÃ´ mai"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingVertical="3dp"
                        android:text="$"
                        android:textSize="18dp"
                        tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />
                    <TextView
                        android:id="@+id/txtCartItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingVertical="3dp"
                        android:text="4"
                        android:textSize="18dp"
                        tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

                </LinearLayout>

                <!-- Cart Item quantity -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="2dp"
                    android:orientation="horizontal">

                   <!-- <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#276B4A"
                        android:textColor="@color/white"
                        android:text="-" />-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingVertical="3dp"
                        android:text="Total: "
                        android:textSize="18dp"
                        tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

                    <EditText
                        android:id="@+id/editTxtQuantity"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:text="100"
                        android:paddingLeft="2dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/main" />

                    <!--<Button
                        android:id="@+id/btnPlus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#276B4A"
                        android:textColor="@color/white"
                        android:text="+" />-->

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>